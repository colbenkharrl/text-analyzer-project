import java.io.*;
import java.util.*;

public class RecordList {
	
	private ArrayList<Record> records;
	
	public RecordList() {
		records = new ArrayList<Record>();
	}
	
	public RecordList(File in) {
		records = parseFile(in);
	}
	
	private ArrayList<Record> parseFile(File in) {
		ArrayList<Record> res = new ArrayList<Record>();
		
		InputStream fileIs = null;
        ObjectInputStream objIs = null;
        Record r;
        try {
            fileIs = new FileInputStream("Records.txt");
            objIs = new ObjectInputStream(fileIs);
            //Employee emp = (Employee) objIs.readObject();
            
            try {
            	for (;;) {
            		r = (Record) objIs.readObject();
            	}
            } catch (EOFException e) {
            	objIs.close();
            }
            
        } catch (FileNotFoundException e) {
            e.printStackTrace();
        } catch (IOException e) {
            e.printStackTrace();
        } catch (Exception e) {
        } finally {
            try {
                if(objIs != null) objIs.close();
            } catch (Exception ex){
                 
            }
        }
		
		return res;
	}
	
	public void addRecord(Record r) {
		records.add(r);
	}
}
